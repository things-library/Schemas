{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schema.thingslibrary.io/1.0.0/thing.json",
    "$comment": "Things are the base data object of the things library.",
    
    "type": "object",
    "properties": {
        "key": {
            "type": "string",
            "title": "Key",
            "minLength": 2,
            "maxLength": 50,
            "pattern": "^[a-z0-9_]*$"
        },

        "date": {
            "type": "string",
            "title": "Date",
            "format": "date-time"        
        },

        "name": {
            "type": "string",
            "title": "Name",
            "minLength": 2,
            "maxLength": 50
        },

        "type": {
            "type": "string",
            "title": "Type",
            "minLength": 2,
            "maxLength": 50,
            "pattern": "^[a-z0-9_]*$"
        },
        
        "attributes": {
            "type": "object",
            "title": "Attributes",
            "patternProperties": {
                "^[a-z0-9_]+$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        
        "attachments": {
            "type": "array",
            "title": "Attachments",
            "items": {
                "$ref": "#"
            }
        }
    },
    "required": [ "key", "name", "type" ]
}
