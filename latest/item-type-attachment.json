{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schema.thingslibrary.io/1.0/item-type-attachment.json",
    "$comment": "Item type attachments that are typical for this item type.",

    "$defs": {
        "item-type-attachment": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type Key",
                    "minLength": 2,
                    "maxLength": 200,
                    "pattern": "^[a-z0-9_]*$"
                },

                "name": {
                    "type": "string",
                    "title": "Name",
                    "minLength": 2,
                    "maxLength": 200
                },

                "description": {
                    "type": "string",
                    "title": "Description"
                },

                "required": {
                    "type": "boolean",
                    "title": "Required",
                    "description": "Is this item type required to be attached?",
                    "default": false
                },

                "limit": {
                    "type": "integer",
                    "title": "Limit",
                    "description": "Limit number of attachments of this type? (0 = not limited)",
                    "default": 0
                },

                "metadata": {
                    "type": "object",
                    "title": "Metadata",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },

            "required": [ "type", "name" ]
        }
    },
    
    "$ref": "#/$defs/item-type-attachment"
}
